@using CoreMvc.Models.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="card cyberpunk-card animate__animated animate__fadeIn">
        <div class="card-header">
            <h2 class="text-neon">Create Your Otaku Account</h2>
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-neon">Email</label>
                    <input asp-for="Email" class="form-control cyberpunk-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-neon">Password</label>
                    <input asp-for="Password" class="form-control cyberpunk-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label text-neon">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control cyberpunk-input" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary cyberpunk-button">Register</button>
            </form>
            <div class="mt-3">
                <a href="/Account/Login" class="text-neon">Already have an account? Log In</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}