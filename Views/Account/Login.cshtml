@using CoreMvc.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="card cyberpunk-card animate__animated animate__fadeIn">
        <div class="card-header">
            <h2 class="text-neon">Log In to Your Otaku Profile</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-neon">Email</label>
                    <input asp-for="Email" class="form-control cyberpunk-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-neon">Password</label>
                    <input asp-for="Password" class="form-control cyberpunk-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-neon">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary cyberpunk-button">Log In</button>
            </form>
            <div class="mt-3">
                <a href="/Account/Register" class="text-neon">Need an account? Sign Up</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}